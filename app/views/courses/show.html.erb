<div class="flex items-center justify-center min-h-screen my-5">
  <section class="w-full max-w-4xl p-4 bg-white rounded-lg shadow-lg">
    <div class="py-8 px-4 lg:py-16">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-semibold text-blue-900">Course Details</h2>
      </div>
      <div class="rounded-lg border border-blue-900 bg-blue-200 p-4">
        <div class="my-5">
          <strong class="block font-medium text-blue-900">Title:</strong>
          <%= @course.title %>
        </div>

        <div class="my-5">
          <strong class="block font-medium text-blue-900">Teacher:</strong>
          <%= @course.user.email %>
        </div>

        <div class="my-5">
          <strong class="block font-medium text-blue-900">Description:</strong>
          <%= @course.description %>
        </div>

        <div class="my-5">
          <strong class="block font-medium text-blue-900">Language:</strong>
          <%= @course.language %>
        </div>

        <div class="my-5">
          <strong class="block font-medium text-blue-900">Level:</strong>
          <%= @course.level %>
        </div>

        <div class="my-5">
          <strong class="block font-medium text-blue-900">Price:</strong>
          <%= number_to_currency(@course.price) %>
        </div>
      </div>
    </div>
  </section>
</div>
