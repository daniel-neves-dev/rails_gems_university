<div class="container mx-auto">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl my-5">Courses</h1>
  </div>

  <div id="courses">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-6">
      <% @courses.each do |course| %>
        <div class="bg-white rounded-lg overflow-hidden shadow-md p-4 md:p-6 text-gray-700
        transition ease-in-out delay-300 hover:-translate-y-1 hover:scale-110 duration-300">
          <div class="mb-4">
            <!-- Course Image (Placeholder) -->
            <%= image_tag('images.jpeg', alt: 'Course Image', class: 'w-full h-48 object-cover rounded-md') %>
          </div>
          <div class="mb-4 my-5">
            <h2 class="text-xl font-semibold"><%= course.title %></h2>
          </div>

          <div class="flex flex-wrap">
            <div class="w-full sm:w-1/2 md:w-1/3 mb-4 font-bold">
              <strong class="block font-medium mb-1">Teacher:</strong>
              <%= course.user.email %>
            </div>

          </div>

          <div class="flex flex-wrap mt-4 my-5">
            <div class="w-full sm:w-1/2 md:w-1/3 mb-4">
              <strong class="block font-medium mb-1">Language:</strong>
              <%= course.language %>
            </div>

            <div class="w-full sm:w-1/2 md:w-1/3 mb-4">
              <strong class="block font-medium mb-1">Level:</strong>
              <%= course.level %>
            </div>

            <div class="w-full sm:w-1/2 md:w-1/3 mb-4">
              <strong class="block font-medium mb-1">Price:</strong>
              <%= number_to_currency(course.price) %>
            </div>
          </div>

          <div class="mt-4 my-5">
            <strong class="block font-medium mb-1">Description:</strong>
            <%= course.description %>
          </div>

          <div class="mt-4 flex justify-end gap-4 my-5">
            <% if action_name != "show" %>
              <%= link_to edit_course_path(course),
                          class: "focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:focus:ring-yellow-900" do %>
                <i class="fa-solid fa-pencil"></i> Edit
              <% end %>
              <%= button_to course_path(course), method: :delete, form: { data: { turbo_confirm: "Delete?" },
                                                                          class: "focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" } do %>
                <i class="fa-solid fa-trash-can text-removeIcon"></i> Delete
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
