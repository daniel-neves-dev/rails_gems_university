<div class="container mx-auto">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Courses</h1>
  </div>

  <div id="courses" class="min-w-full">
    <% @courses.each do |course| %>
      <p class="my-5">
        <strong class="block font-medium mb-1">Title:</strong>
        <%= course.title %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Description:</strong>
        <%= course.description %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Language:</strong>
        <%= course.language %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Level:</strong>
        <%= course.level %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Price:</strong>
        <%= course.price %>
      </p>

      <% if action_name != "show" %>
        <%= link_to 'Edit', edit_course_path(course), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
        <hr class="mt-6">
      <% end %>
    <% end %>
  </div>
</div>
